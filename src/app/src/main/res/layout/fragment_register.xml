<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.fragments.RegisterFragment">

    <TextView
        android:id="@+id/registerTextView"
        android:layout_width="0dp"
        android:lines="2"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/sweepr_fragment_register_heading"
        android:textSize="40sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerTextView"
        app:layout_constraintBottom_toTopOf="@id/bottomPanel"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/registerTextView"
            >

            <EditText
                android:id="@+id/firstNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sweepr_fab_margin"
                android:layout_marginRight="@dimen/sweepr_fab_margin"
                android:gravity="center"
                android:text=""
                android:inputType="text"
                android:hint="@string/sweepr_fragment_register_firstname_hint"
                android:autofillHints="personName"
                />
            <EditText
                android:id="@+id/lastNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sweepr_fab_margin"
                android:layout_marginRight="@dimen/sweepr_fab_margin"
                android:gravity="center"
                android:text=""
                android:inputType="text"
                android:hint="@string/sweepr_fragment_register_surname_hint"
                android:autofillHints="personFamilyName"
                />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:text=""
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sweepr_fab_margin"
                android:layout_marginRight="@dimen/sweepr_fab_margin"
                android:layout_marginTop="@dimen/sweepr_fab_margin"
                android:gravity="center"
                android:inputType="text"
                android:hint="@string/sweepr_fragment_register_email_placeholder"
                android:autofillHints="emailAddress"
                />

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sweepr_fab_margin"
                android:layout_marginRight="@dimen/sweepr_fab_margin"
                android:layout_marginTop="@dimen/sweepr_fab_margin"
                android:gravity="center"
                android:inputType="textPassword"
                android:hint="@string/sweepr_password_placeholder"
                android:autofillHints="newPassword"
                />

            <EditText
                android:id="@+id/confirmPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sweepr_fab_margin"
                android:layout_marginRight="@dimen/sweepr_fab_margin"
                android:gravity="center"
                android:inputType="textPassword"
                android:hint="@string/sweepr_fragment_register_password_confirmation_placeholder"
                android:autofillHints="newPassword"
                />

            <Button
                android:id="@+id/registerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/sweepr_button_create_account"
                />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:id="@+id/haveAccountAlready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sweepr_action_link_existing_account"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
